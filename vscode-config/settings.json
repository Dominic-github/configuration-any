{
  "grunt.autoDetect": "on",
  "git.terminalGitEditor": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 13,
  "editor.codeActionsOnSave": {},
  "git.autofetch": true,
  "cmake.configureOnOpen": true,
  "workbench.iconTheme": "catppuccin-mocha",

  "cmake.autoSelectActiveFolder": false,
  "cmake.saveBeforeBuild": false,
  "cmake.configureOnEdit": false,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "prettier.documentSelectors": [
    "**/*.{js,jsx,ts,tsx,vue,html,css,scss,less,json,md,mdx,graphql,yaml,yml}"
  ],
  "[python]": {
    "editor.formatOnType": true
  },
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.singleAttributePerLine": true,
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "editor.tabSize": 2,
  "editor.fontLigatures": false,

  // Discord
  "discord.lowerDetailsIdling": "some stuff...",
  "discord.detailsIdling": "some stuff...",
  "discord.largeImageIdling": "some stuff...",
  "discord.lowerDetailsNoWorkspaceFound": "some workspace...",

  // Vim config
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,

  "vim.operatorPendingModeKeyBindings": [],

  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-a>"],
      "commands": ["editor.action.selectAll"],
      "silent": true
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [],

  "vim.normalModeKeyBindings": [
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    {
      "before": ["<C-a>"],
      "after": ["g", "g", "V", "G"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },

    {
      "before": ["J"],
      "after": ["6", "j"]
    },
    {
      "before": ["K"],
      "after": ["6", "k"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.view.explorer"],
      "silent": true
    },
    {
      "before": ["<C-v>"],
      "commands": ["workbench.editor.openSideBySideDirection"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },

    {
      "before": ["<tab>"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"]
    },

    {
      "before": ["<leader>", "g", "g"],
      "commands": ["workbench.action.togglePanel"]
    }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },

    // move
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },

    {
      "before": ["<leader>", "="],
      "after": ["<C-w>", "l"]
    },

    {
      "before": ["<Leader>", "p"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<Leader>", "t"],
      "commands": ["workbench.action.gotoSymbol"]
    }
  ],

  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["L"],
      "after": ["$", "h"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },

    {
      "before": ["J"],
      "after": ["6", "j"]
    },
    {
      "before": ["K"],
      "after": ["6", "k"]
    }
  ],

  "vim.leader": "<space>",
  "vim.handleKeys": {
    // "<C-a>": false,
    "<C-[>": false,
    "<C-]>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<C-s>": false,
    "<C-v>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-k>": false,
    "<C-o>": false,
    "<C-y>": false
  },

  "workbench.colorTheme": "Catppuccin Mocha",
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "files.autoSaveDelay": 5000,
  "editor.fontFamily": "FiraCode Nerd Font",
  "security.workspace.trust.untrustedFiles": "open",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
