// Author: Dominic
// Github: https://github.com/Dominic-github/
{
  // System
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "files.autoSaveDelay": 5000,
  "tabnine.experimentalAutoImports": true,
  "extensions.ignoreRecommendations": true,

  // Prettier
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.singleAttributePerLine": true,
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "editor.tabSize": 2,
  "editor.fontLigatures": false,

   // Discord
  "discord.lowerDetailsIdling": "some stuff...",
  "discord.detailsIdling": "some stuff...",
  "discord.largeImageIdling": "some stuff...",
  "discord.lowerDetailsNoWorkspaceFound": "some workspace...",

  // Vim config
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,

  "vim.operatorPendingModeKeyBindings": [],

  "vim.insertModeKeyBindings": [
      {
  
      "key": "Ctrl+h",
      "command": "workbench.explorer.fileView.focus",
      "when": "editorTextFocus && vim.active && vim.mode != 'Insert' && activeEditorGroupIndex == 1 && explorerViewletVisible"
      },

      {
      "before": ["<C-a>"],
      "commands": ["editor.action.selectAll"],
      "silent": true
      }

  ],
  "vim.insertModeKeyBindingsNonRecursive": [],

  "vim.normalModeKeyBindings": [
      {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action"],
      "silent": true
      },
      {
      "before": ["<C-a>"],
      "after": ["g", "g", "V", "G"]
      },
      {
      "before": ["<C-n>"],
      "commands": [":nohl"]
      },
      {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
      },
      {
      "before": ["L"],
      "after": ["$"]
      },
      {
      "before": ["H"],
      "after": ["^"]
      },

      {
      "before": ["J"],
      "after": ["6", "j"]
      },
      {
      "before": ["K"],
      "after": ["6", "k"]
      },
      {
      "before": ["<leader>", "a"],
      "commands": ["workbench.view.explorer"],
      "silent": true
      },
      {
      "before": ["<C-v>"],
      "commands": ["workbench.editor.openSideBySideDirection"]
      },
      {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
      },

      {
      "before": ["<tab>"],
      "commands": [
          "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
      },
      {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"]
      },

      {
      "before": ["<leader>", "g", "g"],
      "commands": ["workbench.action.togglePanel"]
      },
      {
      "before": ["<C-w>", "v"],
      "commands": ["workbench.action.splitEditor"]
      },
      {
      "before": ["<C-w>", "s"],
      "commands": ["workbench.action.splitEditorDown"]
      },
  
      {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
      },
      {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
      },
      {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
      },
      {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
      },
      {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
      },
      {
      "before": ["<leader>", "f", "b"],
      "commands": ["workbench.action.showAllEditors"]
      },
      {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.findInFiles"]
      },
      {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
      },
      {
      "before": ["<leader>", "f", "m"],
      "commands": ["editor.action.format"]
      },

      {
      "before": ["<leader>", "r", "a"],
      "commands": ["editor.action.rename"]
      }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
      {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
      },
      {
      "before": ["<C-n>"],
      "commands": [":nohl"]
      },
      {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
      },

      {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
      },
      {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
      },
      {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
      },
      {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
      },

      {
      "before": ["<leader>", "="],
      "after": ["<C-w>", "l"]
      },

      {
      "before": ["<Leader>", "p"],
      "commands": ["workbench.action.showCommands"]
      },
      {
      "before": ["<Leader>", "t"],
      "commands": ["workbench.action.gotoSymbol"]
      }
  ],

  "vim.visualModeKeyBindings": [
      {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
      },
      {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
      },
      {
      "before": ["L"],
      "after": ["$", "h"]
      },
      {
      "before": ["H"],
      "after": ["^"]
      },

      {
      "before": ["J"],
      "after": ["6", "j"]
      },
      {
      "before": ["K"],
      "after": ["6", "k"]
      }
  ],

  "vim.leader": "<space>",
  "vim.handleKeys": {
      "<C-a>": false,
      "<C-[>": false,
      "<C-]>": false,
      "<C-f>": false,
      "<C-b>": false,
      "<C-s>": false,
      "<C-e>": false,
      "<C-v>": false,
      "<C-c>": false,
      "<C-x>": false,
      "<C-k>": false,
      "<C-o>": false,
      "<C-y>": false,
      "<C-p>": false
  }
}